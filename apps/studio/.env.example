# Supabase Studio Runtime Environment Variables
# Copy this file to .env and fill in your actual values
# These variables should be set when running the Docker container

# Core Supabase Configuration
SUPABASE_PUBLIC_URL=https://your-project.supabase.co
SUPABASE_URL=https://your-project.supabase.co
API_EXTERNAL_URL=https://your-project.supabase.co

# Supabase Keys (SENSITIVE - Keep these secure)
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_KEY=your-service-key-here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Authentication URLs
NEXT_PUBLIC_GOTRUE_URL=https://your-project.supabase.co/auth/v1

# Database Configuration (SENSITIVE)
POSTGRES_HOST=db.your-project.supabase.co
POSTGRES_PORT=5432
POSTGRES_DB=postgres
POSTGRES_PASSWORD=your-db-password

# PG Meta Service
STUDIO_PG_META_URL=https://your-project.supabase.co/pg
PG_META_CRYPTO_KEY=your-crypto-key

# Project Configuration
TEMPLATE_DATABASE_NAME=template_database
DEFAULT_ORGANIZATION_NAME=Your Organization
DEFAULT_PROJECT_NAME=Your Project
ENVIRONMENT=production

# JWT Secrets (SENSITIVE - Generate secure random strings)
AUTH_JWT_SECRET=your-jwt-secret-here
JWT_SECRET=your-jwt-secret-here

# Logging and Analytics
LOGFLARE_URL=https://api.logflare.app
LOGFLARE_PUBLIC_ACCESS_TOKEN=your-public-token
LOGFLARE_PRIVATE_ACCESS_TOKEN=your-private-token

# Platform Configuration (usually keep as defaults)
NEXT_PUBLIC_IS_PLATFORM=false
NEXT_PUBLIC_REQUIRE_LOGIN=true